@using PacificTours.Shared.Entities
@inject HttpClient Http

<h3>All Hotels</h3>

@if (_hotels is null)
{
    <span>Loading Hotels...</span>
}
else
{
    <table>
        <thead>
        <tr>
            <th>Name</th>
            <th>Cost of Single Room (£)</th>
            <th>Cost of Double Room (£)</th>
            <th>Cost of Family Room (£)</th>
        </tr>
        </thead>
        <tbody>
            @foreach (var hotel in _hotels)
            {
                <tr>
                    <td width="15%">@hotel.Name</td>
                    <td width="9%">@hotel.SingleCost</td>
                    <td width="9%">@hotel.DoubleCost</td>
                    <td width="9%">@hotel.FamilyCost</td>
                    <td><button @onclick="(() => BookSingle(hotel.Id))" class="btn btn-primary">Book Single Room</button>
                        <button @onclick="(() => BookDouble(hotel.Id))" class="btn btn-primary">Book Double Room</button>
                        <button @onclick="(() => BookFamily(hotel.Id))" class="btn btn-primary">Book Family Room</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}


